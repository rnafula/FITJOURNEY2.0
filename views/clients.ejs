<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Clients - FitJourney</title>
  <link rel="stylesheet" href="nutri.css">
  <style>
    .client-list {
      margin: 20px;
    }
    .client-card {
      background: #fff;
      padding: 15px;
      margin-bottom: 15px;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
    .client-card h3 {
      margin: 0;
      color: #076396;
    }
    .client-card p {
      margin: 4px 0;
      color: #333;
    }
    .actions {
      margin-top: 10px;
    }
    .actions form {
      display: inline;
    }
    .actions button {
      padding: 6px 12px;
      margin-right: 5px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
    .approve-btn {
      background: #28a745;
      color: #fff;
    }
    .reject-btn {
      background: #dc3545;
      color: #fff;
    }
  </style>
</head>
<body>
      <%- include("_header.ejs") %>
  <div class="dashboard">

    <!-- Main Content -->
    <main class="content">
      <header>
        <h1>My Clients</h1>
      </header>

      <section class="client-list">
        <% if (clients.length === 0) { %>
          <p>No client requests yet.</p>
        <% } else { %>
          <% clients.forEach(req => { %>
            <div class="client-card">
              <h3><%= req.username %></h3>
              <p><strong>Goal:</strong> <%= req.goal %></p>
              <p><strong>Notes:</strong> <%= req.notes || "None" %></p>
              <p><strong>Plan Type:</strong> <%= req.plan_type %></p>
              <p><strong>Status:</strong> <%= req.status %></p>

              <div class="actions">
                <% if (req.status === "pending") { %>
                 <form action="/requests/<%= req.id %>/reject" method="POST">
                    <button type="submit" class="reject-btn">Reject</button>
                  </form>
                  <form action="/requests/<%= req.id %>/approve" method="POST">
                    <button type="submit" class="approve-btn">Approve</button>
                  </form>
                <% } else if(req.status === "paid") { %>
                  <form action="/requests/<%= req.id %>/reject" method="POST">
                    <button type="submit" class="approve-btn">Assign plan</button>
                  </form>
                <% } else if(req.status === "completed"){ %>
                  <form action="/requests/<%= req.id %>/reject" method="POST">
                    <button type="submit" class="approve-btn">View Client</button>
                  </form>
                <% } else { %>
                  <p><em>Already <%= req.status %></em></p>
                <% } %>
              </div>
            </div>
          <% }) %>
        <% } %>
      </section>
    </main>
  </div>
</body>
</html>
