<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Payments - FitJourney</title>
  <link rel="stylesheet" href="/user.css">
</head>
<body>
  <div class="dashboard">
    <aside class="sidebar">
      <h2>FitJourney</h2>
      <nav>
        <a href="/user-dash">Dashboard</a>
        <a href="/professionals">Professionals</a>
        <a href="/requests">My Requests</a>
        <a href="/payments">Payments</a>
        <a href="/plans">My Plans</a>
        <a href="/progress">Progress</a>
        <a href="/profile"><%= user.username %></a>
        <a href="/logout">Logout</a>
      </nav>
    </aside>

    <main class="content">
      <header>
        <h1>My Payments</h1>
      </header>

      <% if (payments.length === 0) { %>
        <p>You have not made any payments yet.</p>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Request</th>
              <th>Professional</th>
              <th>Role</th>
              <th>Amount</th>
              <th>Status</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% payments.forEach(p => { %>
              <tr>
                <td><%= p.id %></td>
                <td>#<%= p.request_id %></td>
                <td><%= p.professional_name %></td>
                <td><%= p.professional_role %></td>
                <td>KES <%= p.amount %></td>
                <td><%= p.status %></td>
                <td><%= new Date(p.created_at).toLocaleString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </main>
  </div>
</body>
</html>
