<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Professionals - FitJourney</title>
  <link rel="stylesheet" href="user.css">
  <style>
    .pro-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
    }
    .pro-card {
      background: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.08);
      text-align: center;
    }
    .pro-card h3 {
      margin: 10px 0;
      color: #076396;
    }
    .pro-card p {
      margin: 5px 0;
      font-size: 14px;
      color: #444;
    }
    .pro-card button {
      margin-top: 10px;
      padding: 8px 15px;
      background-color: #6c93db;
      border: none;
      border-radius: 6px;
      color: #fff;
      cursor: pointer;
      transition: background 0.3s;
    }
    .pro-card button:hover {
      background-color: #02263a;
    }
  </style>
</head>
<body>
  <div class="dashboard">
    <!-- Sidebar -->
    <aside class="sidebar">
      <h2>FitJourney</h2>
      <nav>
        <a href="/user-dash">Dashboard</a>
        <a href="/professionals" class="active">Professionals</a>
        <a href="/requests">My Requests</a>
        <a href="/payments">Payments</a>
        <a href="/plans">My Plans</a>
        <a href="/progress">Progress</a>
        <a href="/profile"><%= user.username %></a>
        <a href="/logout">Logout</a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="content">
      <header>
        <h1>Available Professionals</h1>
      </header>

      <section class="pro-grid">
        <% professionals.forEach(pro => { %>
          <div class="pro-card">
            <h3><%= pro.firstname %> <%= pro.lastname %></h3>
            <p>Username: <%= pro.username %></p>
            <p>Role: <%= pro.role %></p>
            <p>Charges: KES <%= pro.client_charges || "N/A" %></p>
            <p>License: <%= pro.license || "N/A" %></p>
            
            <form action="/requests" method="POST">
              <input type="hidden" name="professional_id" value="<%= pro.id %>">
              <input type="hidden" name="role" value="<%= pro.role %>">
              <button type="submit">Request Plan</button>
            </form>
          </div>
        <% }) %>
      </section>
    </main>
  </div>
</body>
</html>
